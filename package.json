{
  "name": "ems-plus-plus",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "services/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "install:gateway": "npm install --workspace=apps/gateway",
    "install:auth": "npm install --workspace=services/auth-service",
    "install:rbac": "npm install --workspace=services/rbac-service",
    "install:org": "npm install --workspace=services/org-service",
    "install:employee": "npm install --workspace=services/employee-service",
    "install:attendance": "npm install --workspace=services/attendance-service",
    "install:leave": "npm install --workspace=services/leave-service",
    "install:crm": "npm install --workspace=services/crm-service",
    "install:payroll": "npm install --workspace=services/payroll-service",
    "install:asset": "npm install --workspace=services/asset-service",
    "install:notification": "npm install --workspace=services/notification-service",
    "install:documents": "npm install --workspace=services/documents-service"
  },
  "devDependencies": {
    "turbo": "^2.3.3"
  },
  "dependencies": {
    "bcryptjs": "^3.0.3",
    "jsonwebtoken": "^9.0.2"
  }
}
